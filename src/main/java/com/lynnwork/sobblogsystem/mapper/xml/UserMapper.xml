<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynnwork.sobblogsystem.mapper.UserMapper">
    <select id="findOneByUserName" resultType="com.lynnwork.sobblogsystem.pojo.User">
        select id,
               user_name,
               password,
               role,
               avatar,
               email,
               sign,
               state,
               reg_ip,
               log_ip,
               create_time,
               update_time
        from tb_user
        where user_name = #{user_name}
    </select>
    <select id="findOneByEmail" resultType="com.lynnwork.sobblogsystem.pojo.User">
        select id,
               user_name,
               password,
               role,
               avatar,
               email,
               sign,
               state,
               reg_ip,
               log_ip,
               create_time,
               update_time
        from tb_user
        where email = #{email}
    </select>
</mapper>
